{
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM", "WebWorker"],
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "jsx": "preserve",
    "target": "ES2018",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "@@/*": ["./*"]
    }
  }
}
